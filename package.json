{
  "name": "invoicely",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "sys-link": "./env-links.sh",
    "postinstall": "patch-package",
    "reset-repo": "git clean -Xdf",
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:scan": "turbo run dev & npx react-scan@latest localhost:3000",
    "start": "turbo run start",
    "production": "turbo run build && turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@invoicely/eslint-config": "workspace:*",
    "@invoicely/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "husky": "^9.1.7",
    "patch-package": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-sort-imports": "^1.8.7",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.13.4",
    "drizzle-kit": "^0.31.1"
  }
}
